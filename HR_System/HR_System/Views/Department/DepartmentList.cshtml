@model List<Department>
@{
    ViewData["Title"] = "DepartmentList";
    Layout = "~/Views/Shared/_LayoutView.cshtml";
}

@section Body{
    <form method="post">
        <div class="container">
            <div class="row" style="margin-top:10px">
                <div class="col-lg-1"> Name </div>

                <div class="col-lg-4">
                    <input type="text" class="form-control" name="txtSearch" />
                </div>

                <div class="col-lg-2">
                    <input type="submit" value="Search" class="btn btn-primary" asp-action="SearchData" />
                </div>
            </div>

            <div class="row" style="margin-top:20px">
                <div class="col-lg-12">
                    <table class="table table-bordered table-hover table-striped">

                        <thead>
                            <tr>
                                <th><span class="text-primary"> Name </span></th>
                                <th><span class="text-primary"> Option </span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Department item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        <a class="text-primary" asp-action="Edit" asp-route-id=@item.ID> Edit </a> |
                                        <a class="text-primary" asp-action="DeleteData" asp-route-id='@item.ID'> Delete </a> |
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </form>
}


