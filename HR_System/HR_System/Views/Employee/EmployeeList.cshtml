@model List<Employee>
@{
    ViewData["Title"] = "EmployeeList";
    Layout = "~/Views/Shared/_LayoutView.cshtml";
}

@section Body{
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <h3>Employee List</h3>
                </div>
            </div>

            <div class="row" style="margin-top:10px">

                <div class="col-lg-1">
                    <label>First Name</label>
                </div>

                <div class="col-lg-4">
                    <input type="text" class="form-control" name="txtSearch" />
                </div>

                <div class="col-lg-2">
                    <input type="submit" value="Search" class="btn btn-primary" asp-action="SearchData" />
                </div>
            </div>

            <div class="row" style="margin-top:20px">
                <div class="col-lg-12">
                    <table class="table table-bordered table-hover table-striped">

                        <thead>
                            <tr>
                                <th><span class="text-primary"> First Name </span></th>
                                <th><span class="text-primary"> Last Name </span></th>
                                <th><span class="text-primary"> Phone </span></th>
                                <th><span class="text-primary"> Department </span></th>
                                <th><span class="text-primary"> Option </span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Employee item in Model) {
                                <tr>                                    
                                    <td>
                                       @item.FName
                                    </td>

                                    <td>
                                        @item.LName
                                    </td>

                                    <td>
                                        @item.Phone
                                    </td>

                                    <td>
                                        @item.department.Name
                                    </td>

                                    <td>
                                        <a class="text-primary" asp-action="EditData" asp-route-id="@item.ID" > Edit </a> |
                                        <a class="text-primary" asp-action="DeleteData" asp-route-id="@item.ID" > Delete </a>
                                    </td>
                                </tr>
                            }
                            
                        </tbody>

                    </table>
                </div>
            </div>




        </div>
    </form>
}

